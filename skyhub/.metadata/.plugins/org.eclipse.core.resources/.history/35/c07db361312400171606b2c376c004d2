package com.technicalyorker.codetest.skyhubdigital.recommendation;

import java.io.File;
import java.io.IOException;

import org.junit.Test;

import com.fasterxml.jackson.databind.ObjectMapper;
import com.technicalyorker.codetest.skyhubdigital.recommendation.model.MovieList;

public class MovieDB {
	public MovieList getMovieList() {
		MovieList obj = null;
		ObjectMapper mapper = new ObjectMapper();
		try {
			obj = mapper.readValue(new File(getClass().getClassLoader().getResource("movies.json").getFile()),
					MovieList.class);
		} catch (IOException e) {
			e.printStackTrace();
		}
		return obj;
	}

	@Test
	public void test() {
		System.out.println(getMovieList());
	}
}
